                <script>
              
                        let listShipName = [];
                        let listLog2 = [];
                            let  listTime2 = [];
                        
                    
                        var x = 1;
                        var y = 0;

                    function logFileMsgAlertTextFile(fileName){
                  var rowAdd2 = document.getElementById('tableDisp2');
                  var NewRow2 = rowAdd2.insertRow(x);
                   // var timeStamp2= document.getElementById("timeStamp");
        
                  //  <th id="shipName">Ship Name</th>
